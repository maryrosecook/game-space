{
  "name": "game-space",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "start": "npm run dev",
    "build": "npm run build:games && tsc -p tsconfig.build.json",
    "build:games": "tsx scripts/build-games.ts",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:video": "PLAYWRIGHT_CAPTURE_VIDEO=1 playwright test"
  },
  "dependencies": {
    "cookie": "^1.1.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "iron-session": "^8.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.17.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
