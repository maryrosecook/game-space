{
  "name": "game-v1-bounce",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild src/main.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=dist/game.js",
    "typecheck": "tsc --noEmit",
    "watch": "esbuild src/main.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=dist/game.js --watch",
    "headless": "tsx src/headless/cli.ts",
    "headless:install": "playwright install --with-deps chromium",
    "headless:smoke": "tsx src/headless/cli.ts --smoke",
    "headless:run": "tsx src/headless/cli.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
